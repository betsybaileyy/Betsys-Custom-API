<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form action="/favoriteThings/new" method="post">
            <legend>New Favorite Thing</legend>
            <div class="form-group">
                <label for="favoriteThing">Title</label>
                <input type="text" name="favoriteThing" class="form-control" id="favoriteThing" placeholder="Favorite Thing">
                </div>

                    <div class="form-group">
                        <label for="favoriteThing-description">Summary</label>
                        <textarea name="favoriteThing-description" class="form-control" id="favoriteThing-description" placeholder="Favorite Thing Description"></textarea>
                    </div>
                    <div class='text-right'>
                        <button type="submit" class="btn btn-primary">Share My Favorite Thing</button>
                    </div>

        </form>
    </div>
</div>
